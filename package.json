{
  "name": "@typeform/katt",
  "version": "1.2.23",
  "description": "testing suite for typeform's design systems",
  "bin": {
    "katt": "bin/index.js"
  },
  "scripts": {
    "install:token": "echo //registry.npmjs.org/:_authToken=${NPM_TOKEN} > .npmrc",
    "precommit": "yarn lint-staged && yarn test",
    "test": "touch katt.config.js; yarn run jest; rm katt.config.js"
  },
  "keywords": [
    "testing",
    "visual regression",
    "typeform",
    "cross browser"
  ],
  "contributors": [
    "Typeform (http://typeform.com)",
    "Daniel Giralt Len <daniel.giralt@typeform.com>",
    "Jordi Pons <jordi.pons@typeform.com>",
    "Pau Boix <pau@typeform.com>",
    "Toni Feliu <toni.feliu@typeform.com>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@storybook/react": "^3.4.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "cartesian-product": "^2.1.2",
    "dotenv": "^5.0.1",
    "ncp": "^2.0.0",
    "prompt": "^1.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "wdio-mocha-framework": "^0.5.13",
    "wdio-selenium-standalone-service": "^0.0.10",
    "wdio-visual-regression-service": "^0.9.0",
    "webdriverio": "^4.12.0",
    "webpack": "^4.14.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.1.2",
    "prettier-standard": "^8.0.1",
    "semantic-release": "^15.7.0",
    "standard": "^11.0.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/logs/"
    ]
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier-standard",
        "standard --fix",
        "git add"
      ]
    },
    "ignore": [
      "*spec.js",
      "*/__fixtures__/*",
      "*/__mocks__/*",
      "src/comparison/*",
      "wdio*"
    ]
  }
}
