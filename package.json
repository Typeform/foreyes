{
  "name": "@typeform/katt",
  "version": "1.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install:token": "echo //registry.npmjs.org/:_authToken=${NPM_TOKEN} > .npmrc",
    "generate-combinations-for": "node scripts/generate-combinations-for.js",
    "mass-generate-combinations": "node scripts/mass-generate-combinations.js",
    "precommit": "lint-staged && yarn test",
    "start": "node scripts/create-configuration-files.js && start-storybook -p 8080 -c .storybook",
    "test": "yarn run jest",
    "visual-test": "clear && wdio wdio.reference.conf.js --spec src/comparison/runBaseline.js && wdio wdio.compare.conf.js --spec src/comparison/runComparison.js",
    "visual-test-for": "node ./scripts/visual-test-for.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@storybook/react": "^3.4.5",
    "cartesian-product": "^2.1.2",
    "dotenv": "^5.0.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "wdio-mocha-framework": "^0.5.13",
    "wdio-selenium-standalone-service": "^0.0.10",
    "wdio-visual-regression-service": "^0.9.0",
    "webdriverio": "^4.12.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.1.2",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/logs/"
    ]
  },
  "lint-staged": {
    "linters": {
      "./*.js": [
        "prettier-standard",
        "standard --fix",
        "git add"
      ]
    },
    "ignore": [
      "*spec.js"
    ]
  }
}
